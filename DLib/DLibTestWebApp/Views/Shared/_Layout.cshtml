                <a class="navbar-brand" href="#">Contoso</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Home", new {area = ""})">Home</a></li>
